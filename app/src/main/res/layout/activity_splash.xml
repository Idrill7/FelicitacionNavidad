<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/fondoSplash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/fondosplash"
        android:contentDescription="@string/todoFondoSplash" />

    <ImageView
        android:id="@+id/decoracionsplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="388dp"
        android:contentDescription="@string/todoFondoSplash"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/decoracion" />

    <ImageView
        android:id="@+id/papanoelvector"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="271dp"
        android:contentDescription="@string/todoFondoSplash"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/papanoelvector" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circularFillable"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/logo"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="6dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#8BC34A"
        app:civ_shadow_radius="10" />

    <TextView
        android:id="@+id/textHo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circularFillable"
        android:layout_alignParentStart="true"
        android:layout_marginStart="174dp"
        android:layout_marginTop="97dp"
        android:text="@string/textosplash"
        android:textColor="@color/colorBlanco"
        android:textSize="@dimen/tamanoHo"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textHo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circularFillable"
        android:layout_alignParentStart="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="106dp"
        android:text="@string/textosplash"
        android:textColor="@color/colorBlanco"
        android:textSize="@dimen/tamanoHo"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textHo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circularFillable"
        android:layout_alignParentStart="true"
        android:layout_marginStart="263dp"
        android:layout_marginTop="106dp"
        android:text="@string/textosplash"
        android:textColor="@color/colorBlanco"
        android:textSize="@dimen/tamanoHo"
        android:textStyle="bold" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/nieve"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="439dp"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:src="@drawable/snow1" />
</RelativeLayout>