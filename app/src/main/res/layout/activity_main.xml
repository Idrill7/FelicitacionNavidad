<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/papaNoel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/todo"
        android:scaleType="fitXY"
        android:background="@drawable/noel" />


    <TextView
        android:id="@+id/feliz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:rotation="-30"
        android:text="@string/feliz"
        android:textAlignment="center"
        android:textColor="@color/colorFeliz"
        android:textSize="@dimen/tamanoFeliz"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/navidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="27dp"
        android:fontFamily="sans-serif-condensed"
        android:rotation="-30"
        android:text="@string/navidad"
        android:textAlignment="center"
        android:textColor="@color/colorNavidad"
        android:textSize="@dimen/tamanoNavidad"
        android:textStyle="bold" />

    <pl.droidsonroids.gif.GifImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:src="@drawable/snow1" />

</RelativeLayout>